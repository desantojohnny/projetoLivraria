                            <br>
                        </div>
                            
                        <div class="form-control">
                            <label for="endereco" class="input-text-cadastro1"><b>Endereço: </b></label>
                            <label for="endereco" class="input-text-cadastro1"><i><%= client.adress %>.</i></label>
                            <br>
                        </div>

                        <div class="form-control">
                            <label for="cpf" class="input-text-cadastro1"><b>CPF: </b></label>
                            <label for="cpf" class="input-text-cadastro1"><i><%= client.CPF %>.</i></label>
                            <br>
                        </div>

                        <div class="form-control">
                            <label for="cpf" class="input-text-cadastro1"><b>Telefone: </b></label>
                            <label for="cpf" class="input-text-cadastro1"><i><%= client.phone %>.</i></label>
                            <br>
                        </div>

                        <div class="form-control">
                            <label for="email" class="input-text-cadastro1"><b>Email: </b></label><br>
                            <label for="email" class="input-text-cadastro1"><i><%=client.email_login %></i></label>
                            <br>
                        </div>
                    
                        <button type="submit" value= "enviar"class="btn-cadastre-se-cadastro">Editar</button>
                        <a href="/user/delete/<%= client.id %>"><button type="submit" value= "enviar"class="btn-cadastre-se-cadastro">Excluir</button></a>
