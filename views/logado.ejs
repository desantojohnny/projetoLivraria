    <section>
        <div class="box-cadastro1">
            <div class="cadastro">
                <form action="/user/index/<%= client.id %>" method="get" class="formulario" id="formulario"> <!-- * Adicionado: action + method -->
                    <h1 class="header1">Olá <%= client.first_name %>!</h1>
                    <br>
                    <p class="header1">Seja bem vindo! Esta é a página do seu perfil</p></h4><br><br>
                    <div class="header">              
                        <label class="titulo-form-cadastro">SEUS DADOS PESSOAIS: </label><br><br>
                    </div> 

                        <div class="form-control">
                            <label for="nome" class="input-text-cadastro1"><b>Nome: </b></label>
